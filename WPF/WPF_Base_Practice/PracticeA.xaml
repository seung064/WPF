<Window x:Class="WPF_Base_Practice.PracticeA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Base_Practice"
        mc:Ignorable="d"
        Title="PracticeA" Height="200" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
<!--아이디-->
        <TextBlock Text="아이디" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="txtId" Grid.Row="0" Grid.Column="1" Margin="5"/>

<!--비밀번호-->
        <TextBlock Text="비밀번호" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <PasswordBox x:Name="txtPw" Grid.Row="1" Grid.Column="1" Margin="5"/>

 <!--       버튼-->
        <Button Content="로그인" Grid.Row="3" Grid.Column="2" Margin="5" Click="Button_Click" Width="100" Height="30" VerticalAlignment="Center"/>

    </Grid>
</Window>
