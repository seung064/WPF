<Window x:Class="WPF_Advanced_Practice2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Advanced_Practice2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <WrapPanel>
                <Button x:Name="btnOpen" Content="File Oepn" Width="100" Margin="5" Click="btnOpen_Click"/>
                <Button x:Name="btnGetData" Content="Get Data" Width="100" Margin="5" Click="btnGetData_Click" />
            </WrapPanel>
            <Label x:Name="lblPath" Content="파일 경로" Margin="5"/>
            <DataGrid x:Name="dataGrid" Height="200" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
